{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src/index.ts",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "./scripts/*", "bin"]
}
